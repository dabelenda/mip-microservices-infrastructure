    value: "demo:{{ vagrant_box_ip_address }}"
  - key: 'add-host'
    value: "demo.local:{{ vagrant_box_ip_address }}"
  - key: 'cap-add'
    value: 'sys_admin'
  - key: 'cap-add'
    value: 'sys_ptrace'

